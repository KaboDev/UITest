<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:UITest.Controls">
    <Style x:Key="BetterRadioButton" TargetType="controls:BetterRadioButton" BasedOn="{StaticResource {x:Type RadioButton}}">
        <Setter Property="Background" Value="{Binding RelativeSource={RelativeSource Self}, Path=DefaultBackground}"/>
        
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:BetterRadioButton">
                    <ContentPresenter Content="{TemplateBinding Content}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{Binding RelativeSource={RelativeSource Self}, Path=BackgroundHover}"/>
            </Trigger>
            <Trigger Property="IsChecked" Value="True">
                <Setter Property="Background" Value="{Binding RelativeSource={RelativeSource Self}, Path=BackgroundCheck}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>