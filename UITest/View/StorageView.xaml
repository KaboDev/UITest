                                            VerticalAlignment="Bottom"
                                            HorizontalAlignment="Right"
                                            Margin="0,0,20,10"
                                            RenderOptions.BitmapScalingMode="Fant">
                                            <Border.Background>
                                                <ImageBrush ImageSource="{Binding ImagePath}"
                                                        Stretch="UniformToFill"/>
                                            </Border.Background>
                                        </Border>
